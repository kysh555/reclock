<div id="contents">
  <div id="clock_area">
    <div id="date_area">
      date
    </div>
    <div id="time_area">
      time
    </div>

    <div id="time-bar">
      <div class="time-font">0</div>
      <div class="time-font">9</div>
      <div class="time-font">12</div>
      <div class="time-font">15</div>
      <div class="time-font">24</div>
    </div>
    <div id="time_line">
      <div id="passed">
      </div>
    </div>
  </div>

  <div id="plans_area">
    <div id="todo_area">
      <% @plans.each do |plan| %>
        <li class="todo-list">
          <div class="todo" data-id=<%= plan.id %> data-done=<%= plan.done %>> <%= plan.todo %> </div>
          <% if plan.scheduled_date != nil %>
            <div class="scheduled_date"> <%= plan.scheduled_date.strftime("%m/%d %H:%M")%> </div>
          <% end %>
          <div><%= link_to "Ã—", "/plans/#{plan.id}", method: :delete, class: "delete-btn" %></div>
        </li>
      <% end %>
    </div>

    <div id="todo_form">
      <%= form_with url: plans_path, method: :post, id: 'form' do |f| %>
        <%= f.datetime_field :scheduled_date, id: "date-form" %>
        <%= f.text_field :todo, placeholder: " TO DO", id: "text-form" %>
        <%= f.submit 'save', id: "submit-btn" %>
      <% end %>
    <div>
  </div>
</div>